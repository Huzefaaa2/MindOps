{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OpenSLO Bundle (MindOps)",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["apiVersion", "kind", "metadata", "spec"],
    "properties": {
      "apiVersion": {"type": "string"},
      "kind": {"type": "string"},
      "metadata": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {"type": "string"},
          "labels": {"type": "object", "additionalProperties": {"type": "string"}}
        }
      },
      "spec": {"type": "object"}
    }
  }
}
